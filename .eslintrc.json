{
  "extends": "eslint:recommended",
	"parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
	},
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "never"],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
      }],
    "comma-dangle": ["error", "never"],
    "no-console": 0

  },
  "env": {
      "browser": true,
      "node": true
  }
}
