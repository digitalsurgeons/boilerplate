{
  "name": "reduex-boilerplate",
  "version": "1.0.0",
  "description": "remixed and reduced ds boilerplate",
  "main": "js/index.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "start": "ecstatic --root public_html --cache 0 --port 8080",
    "browsersync": "browser-sync start --proxy $site",
    "build": "npm run build:js && npm run build:css",
    "build:css": "node-sass --include-path ./node_modules scss/app.scss public_html/dist/app.css",
    "build:js": "browserify js/index.js -g uglifyify | uglifyjs -cm | optimize-js > public_html/dist/bundle.js",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:css": "node-sass --include-path ./node_modules -wr scss -o public_html/dist --source-map='public_html/dist' --source-map-embed --source-map-contents",
    "watch:js": "watchify js/index.js -o public_html/dist/bundle.js -dv",
    "eslint": "eslint js/**/*"
  },
  "author": "Digital Surgeons",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.16.0",
    "browserify": "^13.1.0",
    "ecstatic": "^2.1.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "node-sass": "^3.10.0",
    "optimize-js": "^1.0.1",
    "sass-lint": "^1.9.1",
    "uglify-js": "^2.7.3",
    "uglifyify": "^3.0.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "bourbon-neat": "^1.8.0",
    "fastclick": "^1.0.6",
    "jquery": "^3.1.0",
    "node-bourbon": "^4.2.8",
    "normalize-scss": "^5.0.3"
  }
}
