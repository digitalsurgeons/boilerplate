{
  "name": "boilerplate",
  "version": "2.0.0",
  "description": "remixed and reduced ds boilerplate",
  "main": "js/index.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "start": "npm run watch & ecstatic --root public_html --cache 0 --port 8080",
    "browsersync": "browser-sync start --proxy $site",
    "build": "npm run build:js && npm run build:css",
    "build:css": "ds-css scss/app.scss > public_html/dist/app.css && node-sass --output-style='compressed' --include-path ./node_modules public_html/dist/app.css public_html/dist/app.css",
    "build:js": "browserify js/index.js -g uglifyify | uglifyjs -cm | optimize-js > public_html/dist/bundle.js",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:css": "onchange 'scss/*.scss' 'components/**/*.scss' -i -- npm run build:css",
    "watch:js": "watchify js/index.js -o public_html/dist/bundle.js -dv",
    "eslint": "eslint js/**/*"
  },
  "author": "Digital Surgeons",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.16.0",
    "browserify": "^13.1.0",
    "ds-css-cli": "^1.0.14",
    "ecstatic": "^2.1.0",
    "eslint": "^3.5.0",
    "node-sass": "^3.10.0",
    "onchange": "^3.0.2",
    "optimize-js": "^1.0.1",
    "sass-lint": "^1.9.1",
    "uglify-js": "^2.7.3",
    "uglifyify": "^3.0.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "fastclick": "^1.0.6",
    "jquery": "^3.1.0",
    "normalize.css": "^5.0.0"
  }
}
